<?xml version="1.0"?>
<configuration>
	<system.web>
		<compilation debug="true" targetFramework="4.5" />
		<httpRuntime targetFramework="4.5" />
	</system.web>
	<system.webServer>
		<handlers>
			<add name="CreateBasketHandler" path="/baskets" verb="POST" type="SpikeCheckoutKataApi.Web.CreateBasketHandler"/>
			<add name="RetrieveBasketHandler" path="/baskets/*" verb="GET" type="SpikeCheckoutKataApi.Web.RetrieveBasketHandler"/>
			<add name="HttpHandler" path="*" verb="*" type="SpikeCheckoutKataApi.Web.HttpHandler"/>
		</handlers>
	</system.webServer>
</configuration>